  <script>
    function updateTime() {
      const tw = new Date().toLocaleString("zh-TW", { timeZone: "Asia/Taipei", hour12: false });
      const cm = new Date().toLocaleString("zh-TW", { timeZone: "Asia/Bangkok", hour12: false });
      document.getElementById("timeDisplay").innerText = `台灣時間：${tw} | 清邁時間：${cm}`;
    }
    setInterval(updateTime, 1000);
    updateTime();
  </script>
